<p id="notice"><%= notice %></p>

<h2>Listing Lectures</h2>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Short name</th>
        <th>Etcs point</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.name %></td>
        <td><%= lecture.short_name %></td>
        <td><%= lecture.etcs_point %></td>
        <td><%= lecture.description %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Add to plan', lists_path(lecture_id: lecture), {class: 'btn btn-info btn-xs'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Lecture', new_lecture_path, :class => 'btn btn-primary' %>
