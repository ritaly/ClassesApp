<p id="notice"><%= notice %></p>

<h2><%= t "lectures.index.title" %></h2>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th><%= t "lectures.index.name" %></th>
        <th>S<%= t "lectures.index.short" %></th>
        <th>Etcs point</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.name %></td>
        <td><%= lecture.short_name %></td>
        <td><%= lecture.etcs_point %></td>
        <td><%= lecture.description %></td>
        <td><%= link_to lecture,
                class: "btn btn-primary btn-xs" do %>
          <i class="glyphicon glyphicon-eye-open"></i>
          Show
          <% end %>
        </td>
        <td><%= link_to edit_lecture_path(lecture),
                class: "btn btn-warning btn-xs" do %>
          <i class="glyphicon glyphicon-pencil"></i>
          Edit
          <% end %>
        </td>
        <td><%= link_to lecture, method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-danger btn-xs" do %>
          <i class="glyphicon glyphicon-trash"></i>
          Delete
          <% end %>
        </td>
        <td><%= button_to 'Add to plan', lists_path(lecture_id: lecture), {class: 'btn btn-success btn-xs'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Lecture', new_lecture_path, :class => 'btn btn-info' %>
