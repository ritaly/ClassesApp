@import url('https://fonts.googleapis.com/css?family=Pacifico');
header {
  margin: 1em 0;
}

a.navbar-brand {
  font-family: 'Pacifico', cursive;
  color: #6fba51;
  font-size: 2em;
  margin-top: -30px;
}
.navbar-toggle .icon-bar {
  background-color: #f06e58;
}
.navbar-toggle .icon-bar {
    display: block;
    width: 30px;
    height: 4px;
}
.container {
      margin-bottom: 70px;
}
.navbar-brand:before {
  content: url(<%= asset_path('/images/dragon.png') %>);
  margin-right: 5px;
  position: relative;
  left: 0;
  top:10px;
}

#notice {
  background: #fcfcfc;
  padding:1em;
  border:1px solid #ddd;
}
#notice:empty {
  display:none;;
}
.footer {
  margin-top:2em;
  padding: 1em;
  background-color: #f5f5f5;
  width:100%;
  position:fixed;
  bottom:0;
}
